{# templates/admin/create_user.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create User{% endblock %}

{% block body %}
    <h1>Create User</h1>

    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {{ form_row(form.givenName) }}

    <button type="submit">Create</button>
    {{ form_end(form) }}

    {# Button to go to all meldingen #}
    <a href="{{ path('meldingen_overzicht') }}" class="btn btn-primary">Go to All Meldingen</a>
{% endblock %}
