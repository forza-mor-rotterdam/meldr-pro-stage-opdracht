{# templates/admin/dashboard.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <h1>Admin Dashboard</h1>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Given Name</th>
            <!-- Add more columns if needed -->
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.givenName }}</td>
                <!-- Add more columns if needed -->
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Button to go to all meldingen #}
    <a href="{{ path('meldingen_overzicht') }}" class="btn btn-primary">Go to All Meldingen</a>
{% endblock %}
